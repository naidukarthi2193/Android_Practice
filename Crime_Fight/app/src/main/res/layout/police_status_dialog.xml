<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/dialog_heading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Status"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <ImageView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/dialog_heading"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/nameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="Dummy Name"
        />

    <TextView
        android:id="@+id/complain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complain"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"/>
    <TextView
        android:id="@+id/complainValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameValue"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="Dummy Complain"
        />

    <TextView
        android:textStyle="bold"
        android:id="@+id/adhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adhar No."
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/complain"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/adharValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complainValue"
        android:layout_marginTop="10dp"
        android:text="Dummy Adhar"
        android:layout_marginRight="50dp"

        />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/adhar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/addressValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adharValue"
        android:layout_marginTop="10dp"
        android:text="Dummy Address"
        android:layout_marginRight="50dp"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/address"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/statusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressValue"
        android:layout_marginTop="10dp"
        android:text="Dummy Status"
        android:layout_marginRight="50dp"
        />

    <Button
        android:layout_margin="10dp"
        android:id="@+id/statusOngoing"
        app:layout_constraintTop_toBottomOf="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="Accept Case"
        android:textColor="#fff"
        />

    <Button
        android:textColor="#fff"
        android:id="@+id/statusCompleted"
        android:background="@drawable/mybutton"
        android:text="Complete Case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/statusOngoing"
        />
    <Button
        android:id="@+id/statusStop"
        app:layout_constraintTop_toBottomOf="@+id/statusCompleted"
        android:layout_margin="10dp"
        android:background="@drawable/mybutton"
        android:textColor="#fff"
        android:text="Stop Case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        />









</android.support.constraint.ConstraintLayout>